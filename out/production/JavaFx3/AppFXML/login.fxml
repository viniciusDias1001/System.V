<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="AppFXML.Controlador"
          prefHeight="400.0" prefWidth="600.0"
          styleClass="login"
          hgap="15" vgap="15">

    <padding>
        <Insets left="80" top="110"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints minWidth="90" prefWidth="90" halignment="CENTER"/>
        <ColumnConstraints prefWidth="200" maxWidth="-Infinity"/>
    </columnConstraints>



     <Label text="Seja Bem Vindo" styleClass="login-titulo" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"  >
         <GridPane.margin>
             <Insets top="0" bottom="60"/>
         </GridPane.margin>
     </Label>

    <Label text="( System.V )" styleClass="login-titulo2"  GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets top="40"/>
        </GridPane.margin>
    </Label>
     <Label styleClass="login-form-label" text="E-mail:" GridPane.columnIndex="0"  GridPane.rowIndex="1">

     </Label>
    <TextField fx:id="email" GridPane.columnIndex="1"  GridPane.rowIndex="1">

    </TextField>
     <Label styleClass="login-form-label" text="Senha:" GridPane.columnIndex="0" GridPane.rowIndex="2">

     </Label>
    <PasswordField fx:id="senha" GridPane.columnIndex="1"  GridPane.rowIndex="2">

    </PasswordField>
    <Button fx:id="loginBotao" styleClass="login-botao" text="Entrar" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="1" GridPane.halignment="CENTER" onAction="#entrar">


    </Button>

    <Button styleClass="login-botao" text="Salvar Dados" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="1" GridPane.halignment="RIGHT"  onAction="#salvar" >

    </Button>

</GridPane>

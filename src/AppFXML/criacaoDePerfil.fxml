<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="AppFXML.ControladorCriacaoDePf"
          prefHeight="400.0" prefWidth="600.0"
          styleClass="login"
          hgap="12" vgap="12">

    <padding>
        <Insets left="60" top="10"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints minWidth="90" prefWidth="120" halignment="CENTER"/>
        <ColumnConstraints prefWidth="200" maxWidth="-Infinity"/>
    </columnConstraints>



    <Label text="Sistema (System.V)" styleClass="login-titulo" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"  >

    </Label>

    <Label   text="Nome: " GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="LEFT" styleClass="login-form-label"  ></Label>
    <TextField fx:id="nome" text="Digite seu Nome"  GridPane.columnIndex="1" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets right="40"/>
        </GridPane.margin></TextField>

    <Label  text="Email: " GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="LEFT" styleClass="login-form-label"  ></Label>
    <TextField fx:id="email" text="Digite seu Email"  GridPane.columnIndex="1" GridPane.rowIndex="2"> </TextField>

    <Label  text="CPF: " GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="LEFT" styleClass="login-form-label"  ></Label>
    <TextField fx:id="cpf" text="Digite seu CPF"  GridPane.columnIndex="1" GridPane.rowIndex="3"> </TextField>

    <Label  text="Área de Trabalho: " GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="LEFT" styleClass="login-form-labelMenores2"  ></Label>
    <TextField fx:id="areaTrabalho" text="Digite sua Área"  GridPane.columnIndex="1" GridPane.rowIndex="4"> </TextField>

    <Label  text="Dados Sigilosos: " GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="LEFT" styleClass="login-form-labelMenores" GridPane.columnSpan="2" ></Label>
    <TextField fx:id="observacoes" text="  Digite Seus Dados" styleClass="login-botao"  GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" >
        <padding>
            <Insets bottom="90" right="90"/>
        </padding>


    </TextField>


    <Button GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.halignment="LEFT" text="Salvar Perfil" textAlignment="JUSTIFY" styleClass="pf-botao" onAction="#salvarPerfil">

    </Button>



    <Button fx:id="voltarHome"  text="Voltar /p Home"  alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="9" GridPane.halignment="RIGHT" onAction="#voltarHome">

    </Button>



</GridPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="AppFXML.ControladorHome"
          prefHeight="400.0" prefWidth="600.0"
          styleClass="login"
          hgap="20" vgap="20">

    <padding>
        <Insets left="50" top="10"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints minWidth="90" prefWidth="160" halignment="CENTER"/>
        <ColumnConstraints prefWidth="200" maxWidth="-Infinity"/>
    </columnConstraints>



    <Label text="Sistema (System.V)" styleClass="login-titulo" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"  >
    </Label>

    <Label styleClass="login-form-labelPag01" text="Criação Perfil:" GridPane.columnIndex="0"  GridPane.rowIndex="2" GridPane.halignment="LEFT"></Label>
    <Button  fx:id="criaPf" styleClass="login-botao" text="Criar" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="CENTER" GridPane.columnSpan="1" onAction="#criarPf">
        <padding>
            <Insets left="40" right="40" top="10" bottom="10"  />
        </padding>
    </Button>

    <Label styleClass="login-form-labelPag01" text="Busca por CPF:" GridPane.columnIndex="0"  GridPane.rowIndex="3" GridPane.halignment="LEFT"></Label>
    <Button   styleClass="login-botao" text="Buscar" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="CENTER" GridPane.columnSpan="1" >
        <padding>
            <Insets left="40" right="40" top="10" bottom="10"  />
        </padding>
    </Button>

    <Label styleClass="login-form-labelPag01" text="Busca por Nome:" GridPane.columnIndex="0"  GridPane.rowIndex="4" GridPane.halignment="LEFT"></Label>
    <Button   styleClass="login-botao" text="Buscar" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.halignment="CENTER" GridPane.columnSpan="1" >
        <padding>
            <Insets left="40" right="40" top="10" bottom="10"  />
        </padding>
    </Button>

    <Label styleClass="login-form-labelPag01" text="Lista de Perfils:" GridPane.columnIndex="0"  GridPane.rowIndex="5" GridPane.halignment="LEFT"></Label>
    <Button   styleClass="login-botao" text="Buscar" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.halignment="CENTER" GridPane.columnSpan="1" >
        <padding>
            <Insets left="40" right="40" top="10" bottom="10"  />
        </padding>
    </Button>






    <Button fx:id="voltarLogin"  text="Voltar /p Login"  alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="9" GridPane.halignment="RIGHT" onAction="#voltarLogin">

    </Button>

</GridPane>
